<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:id="@+id/rl_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_bill_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Mã đơn hàng: "
            android:textColor="@color/black"
            android:textSize="10sp">
        </TextView>

        <TextView
            android:id="@+id/tv_bill_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_title_bill_id"
            android:text="QWERTY"
            android:layout_marginLeft="3dp"
            android:textColor="@color/yellow"
            android:textSize="10dp">
        </TextView>

        <TextView
            android:id="@+id/tv_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_bill_id"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="Khách hàng: "
            android:textSize="10dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_bill_name_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_bill_id"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_x"
            android:text="Đỗ Long"
            android:textColor="@color/black"
            android:textSize="10dp"></TextView>

        <TextView
            android:id="@+id/tv_title_bill_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tv_x"
            android:text="Địa chỉ: "
            android:textSize="10dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_bill_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_x"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_title_bill_total"
            android:text="12 Trần Phú, Hà Đông, HN"
            android:textColor="@color/black"
            android:textSize="10dp"></TextView>

        <TextView
            android:id="@+id/tv_title_bill_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tv_title_bill_address"
            android:text="Tổng tiền: "
            android:textSize="10dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_bill_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bill_address"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/tv_title_bill_total"
            android:text="80,000 VNĐ"
            android:textColor="@color/black"
            android:textSize="10dp"></TextView>

        <TextView
            android:id="@+id/tv_title_bill_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tv_bill_total"
            android:text="Thời gian đặt hàng: "
            android:textSize="10dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/tv_bill_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_title_bill_time"
            android:layout_below="@+id/tv_bill_total"
            android:text="17/05/2023"
            android:textSize="10dp"
            android:textColor="@color/black">
        </TextView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>