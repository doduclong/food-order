<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/img_photo_cart"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/bunbo">
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <TextView
                android:id="@+id/tv_name_product_cart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:text="Bún bò"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_price_product_cart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tv_name_product_cart"
                android:text="35.000 VND"
                android:textSize="15sp"
                android:textColor="@color/yellow">
            </TextView>

            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_price_product_cart">

                <ImageView
                    android:id="@+id/img_minus_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_remove"></ImageView>

                <TextView
                    android:id="@+id/tv_count_cart"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@+id/img_minus_cart"
                    android:text="1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@color/white">
                </TextView>

                <ImageView
                    android:id="@+id/img_plus_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_add"
                    android:layout_below="@+id/tv_count_cart">
                </ImageView>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_remove_cart"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_trash">
            </ImageView>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>