<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.OrderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_order_info_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin đơn hàng"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text1"
                android:text="Mã đơn hàng:"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text1"
                android:layout_toRightOf="@+id/tv_order_info_text2"
                android:text="XYZ"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text2"
                android:text="Thời gian đặt:"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text2"
                android:layout_toRightOf="@+id/tv_order_info_text3"
                android:text="17/05/2023"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text4"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text3"
                android:text="Khách hàng:"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_cust_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text3"
                android:layout_toRightOf="@+id/tv_order_info_text4"
                android:text="Long"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text5"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text4"
                android:text="Địa chỉ đặt hàng:"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_cust_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text4"
                android:layout_toRightOf="@+id/tv_order_info_text5"
                android:text="3 Trần Phú, Hà Đông, HN"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text6"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text5"
                android:text="Số điện thoại:"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_cust_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_cust_address"
                android:layout_toRightOf="@+id/tv_order_info_text5"
                android:text="0123456789"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text8"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text6"
                android:text="Tổng tiền:"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_cust_phone"
                android:layout_toRightOf="@+id/tv_order_info_text8"
                android:text="40,000 VNĐ"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text9"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text8"
                android:text="Trạng thái:"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text8"
                android:layout_toRightOf="@+id/tv_order_info_text9"
                android:text="Đang giao"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text9"
                android:background="@color/yellow">
            </View>

            <TextView
                android:id="@+id/tv_order_info_text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/yellow"
                android:textSize="15sp"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tv_order_info_text10">
            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/btn_order_info_back"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/rcv_order_info"
                android:layout_centerHorizontal="true"
                android:text="Quay Lại"
                android:textSize="15sp"
                android:background="@drawable/botron_button"
                android:backgroundTint="@null"
                app:backgroundTint="@null">
            </Button>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>